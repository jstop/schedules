= simple_form_for(@routine, html: {class: 'form-horizontal' }) do |f|
  = f.error_notification

  .form-inputs
    = f.input :title
    = f.input :purpose
    = f.input :resources
    = f.input :weeks
    = f.input :days
    = f.input :hours
    = f.input :minutes
    = f.input :tag_list

  .form-actions
    = f.button :submit
